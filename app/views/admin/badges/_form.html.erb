  <% if @badge.errors.any? %>
    <%= render 'shared/errors', resource: @badge %>
  <% end %>
  <%= form_with model: [:admin, @badge], local: true do |form| %>
  <div class ="form-group">

    <p>
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </p>

    <div class="input-group mb-3">
     <div class="input-group-prepend">
        <%= form.label :type, class: "input-group-text", for: "inputGroupSelect01"%>
        <% badge_types = ["first_attemp","category_success", "level_success"] %>
        <%=form.select :badge_type, badge_types, {prompt: true}, {class: "custom-select badge_select" , id: "inputGroupSelect01", }  %>
     </div>
    </div>

    <div class="input-group mb-3">
     <div class="input-group-prepend additional_test hide">
        <%= form.label :test, class: "input-group-text", for: "inputGroupSelect02"%>
        <%=form.select :additional_title, Test.all.pluck(:title), {prompt: true}, {class: "custom-select" , id: "inputGroupSelect02", }  %>
     </div>
    </div>

    <div class="input-group mb-3">
     <div class="input-group-prepend additional_category hide">
        <%= form.label :category, class: "input-group-text", for: "inputGroupSelect03"%>
        <%=form.select :additional_category, Category.all.pluck(:title), {prompt: true}, {class: "custom-select" , id: "inputGroupSelect03", }  %>
     </div>
    </div>

    <div class="input-group mb-3">
     <div class="input-group-prepend additional_level hide">
        <%= form.label :level, class: "input-group-text", for: "inputGroupSelect04"%>
        <%= form.select :additional_level, Test.all.pluck(:level).uniq, {prompt: true}, {class: "custom-select" , id: "inputGroupSelect04", }  %>
     </div>
    </div>

    <p>
      <%= form.label :image %>
      <%= form.file_field :image %>
    </p>

    <p><%= form.submit t('.save'), class: 'btn btn-success'%></p>

  </div>
  <% end %>
