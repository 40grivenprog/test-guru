  <% if @test.errors.any? %>
    <%= render 'shared/errors', resource: @test %>
  <% end %>

  <%= form_with model: [:admin, @test], local: true do |form| %>
  <div class ="form-group">

    <p>
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </p>

    <p>
      <%= form.label :level %>
      <%= form.number_field :level, class: "form-control" %>
    </p>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= form.label :category, class: "input-group-text", for: "inputGroupSelect01" %>
      </div>
      <%= form.collection_select(:category_id, Category.all, :id, :title, {prompt: true}, {class: "custom-select" , id: "inputGroupSelect01", }) %>
    </div>

    <div class = "d-flex flex-row mb-3">

      <div class = "flex-column">
        <%= form.label :hours %>
        <%= form.number_field :hours, class: "form-control" %>
      </div>

      <div class = "flex-column">
        <%= form.label :minutes %>
        <%= form.number_field :minutes, class: "form-control" %>
      </div>

      <div class = "flex-column">
        <%= form.label :seconds %>
        <%= form.number_field :seconds, class: "form-control" %>
      </div>
    </div>

    <p><%= form.submit t('.new'), class: 'btn btn-success'%></p>
    </div>
  <% end %>