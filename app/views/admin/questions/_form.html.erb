  <% if @question.errors.any? %>
  <%= render 'shared/errors', resource: @question %>
  <% end %>

  <%= form_with model: [:admin, @test, @question], local: true do |form| %>
  <div class ="form-group">
    <p>
      <%= form.label :body %>
      <%= form.text_field :body, class: "form-control" %>
    </p>

    <p><%= form.submit t('.new'), class: 'btn btn-success'%></p>

  </div>
  <% end %>
