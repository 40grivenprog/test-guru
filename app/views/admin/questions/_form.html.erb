  <% if @question.errors.any? %>
  <%= render 'shared/errors', resource: @question %>
  <% end %>

  <%= form_with model: [:admin, @test, @question], local: true do |form| %>
  <div class ="form-group">
    <p>
      <%= form.label :body %>
      <%= form.text_field :body, class: "form-control" %>
    </p>

    <p>
      <%= form.submit t('.new'), class: 'btn btn-success'%>
      <%= link_to t('.back'), admin_test_questions_path(test_id: @question.test.id ), class: 'btn btn-warning' %>
    </p>

  </div>
  <% end %>
