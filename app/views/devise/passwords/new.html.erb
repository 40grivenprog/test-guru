  <h2 class = 'row justify-content-center mt-3' ><%= t('.forget_password') %></h2>
  <div class = 'row justify-content-center mt-5'>
    <div class = "col col-md-4" >
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= render "devise/shared/error_messages", resource: resource %>

			  <div class="field">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('.enter_email') %>
			  </div>

			  <div class="actions">
			    <%= f.submit t('.submit'), class: 'btn btn-primary mt-3' %>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>
	  </div>
	</div>
