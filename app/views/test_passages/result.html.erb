  <div class = 'row justify-content-center mt-5'>
    <div class = "col col-md-4" >
      <div class = 'row justify-content-center card shadow-sm mt-5'  >
          <div class = 'card-header' >
            <h2><%= t('.header', title: @test_passage.test.title) %></h2>
          </div>
          <% if @test_passage.success? %>
            <h3><%= t('.succes') %></h3>
            <h3 style = 'color: green' ><%= @test_passage.calculate_statistic %>%</h3>
          <% else %>
            <div class = "d-flex flex-row" >
              <h5><%= t('.fail') %></h5>
              <h5 style = 'color: red' ><%= @test_passage.calculate_statistic %>%</h5>
            </div>
          <% end %>
          <h5><%= t('.questions_num', questions_num: @test_passage.test.questions.length) %></h5>
          <h5><%= t('.level', level: @test_passage.test.level) %></h5>
          <% attemp = TestPassage.where(user_id: @test_passage.user.id).where(test_id: @test_passage.test.id).where(success: true).count %>
          <h5><%= t('.attemp', attemp: attemp) %></h5>
          <%= button_to t('.restart'), start_test_path(@test_passage.test), class: 'btn btn-warning mt-3 mb-3' %>
      </div>
    </div>
  </div>